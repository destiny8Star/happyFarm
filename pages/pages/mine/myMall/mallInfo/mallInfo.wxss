page{
  background: #fff;
}
.userimage {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

/* 输入列表  */

.inputs-head {
  height: 140rpx;
  border-top: 1px solid #f7f7f7;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #f7f7f7;
  font-weight: bold;
}

.flexba {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 4rpx;
  overflow: hidden;
}

.contain {
  width: 100%;
  padding: 0 30rpx;
}

.section {
  height: 88rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #f7f7f7;
  font-weight: bold;
}

input {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
}

.btns {
  margin-top: 52rpx;
}

.right_name {
  height: 29rpx;
  line-height: 29rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #333;
}

.btn {
  width: 690rpx;
  height: 88rpx;
  background: rgba(32, 161, 98, 1);
  border-radius: 8rpx;
  color: #fff;
}

.ptrz {
  width: 134rpx;
  height: 40rpx;
}
.mallShort{
  width: 100%;
}
.mallShort_tit{
  font-size: 25rpx;
  color: #999;
  margin:30rpx 0
}
.mallShort_cont{
  font-size: 28rpx;
  color: #333;
