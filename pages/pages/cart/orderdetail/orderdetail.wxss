  margin-bottom: 20rpx;
}
.order-pay .pay-text .pay-text-min{
  font-size: 22rpx;
}
.pay-choice{
  height: 40rpx;
}
.pay-choice icon{
  /* margin-top: 20rpx; */
  height: 40rpx;
}
.pay-switch{
   height: 44rpx;
}
.pay-switch .wx-switch-input-checked::after{
