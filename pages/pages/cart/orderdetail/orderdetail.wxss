  width:40px;
  height: 22px;
}
.pay-switch .wx-switch-input::after{
  width:20px;
  height: 20px;
} 
 .pay-switch .wx-switch-input:before{
  width:40px;
  height: 22px;
} 
 .pay-switch .wx-switch-input:before{
  width:40px;
  height: 22px;
} 
 .pay-switch .wx-switch-input{
  width:40px;
  height: 22px;
} 
